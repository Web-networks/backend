{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",                  
    "outDir": "./build",                       
    "plugins": [ { "transform": "ts-transformer-keys/transformer" } ],
    "strict": true,                         
    "baseUrl": "src",                      
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,
  }
}
